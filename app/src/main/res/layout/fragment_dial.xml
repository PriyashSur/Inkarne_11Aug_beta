<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/popup"
    android:weightSum="7"
    tools:context="com.svc.sml.ShopActivity">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#88AAAAAA"
        android:paddingTop="100dp"
        android:paddingLeft="50dp">

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="320dp"

        android:layout_gravity="center_horizontal"
        android:gravity="center">

        <RelativeLayout android:id="@+id/layout_lap"
            android:layout_width="300dp"
            android:layout_height="300dp"

            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">
            <!--android:background="@drawable/dial_bg"-->
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView4"
                android:layout_alignTop="@+id/imageView5"
                android:layout_toLeftOf="@+id/imageView8"
                android:layout_toStartOf="@+id/imageView8" />
            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:paddingTop="8dp"
                android:layout_below="@+id/imageView4"
                android:textSize="10sp"
                android:layout_toLeftOf="@+id/imageView8"
                android:layout_toStartOf="@+id/imageView8"
                android:text="        BOTTOMS"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView5"

                android:layout_above="@+id/imageView8"
                android:layout_alignLeft="@+id/imageView7"
                android:layout_alignStart="@+id/imageView7" />
            <!--android:src="@drawable/tops_selected"-->
            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:textSize="10sp"
                android:paddingTop="8dp"
                android:layout_below="@+id/imageView5"
                android:layout_toRightOf="@+id/imageView8"
                android:layout_toEndOf="@+id/imageView8"
                android:text="   TOPS"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView6"

                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/imageView4"
                android:layout_alignStart="@+id/imageView4"
                android:layout_marginBottom="34dp" />
            <!--android:src="@drawable/combos_selected"-->
            <TextView
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_above="@+id/imageView7"
                android:layout_toRightOf="@+id/imageView8"
                android:layout_toEndOf="@+id/imageView8"
                android:textSize="10sp"
                android:text="   BESTSELLERS"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView7"

                android:layout_marginRight="50dp"
                android:layout_marginEnd="40dp"
                android:layout_alignTop="@+id/imageView6"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <!--android:src="@drawable/bestsellers_selected"-->
            <TextView
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_above="@+id/imageView6"
                android:textSize="10sp"
                android:layout_toLeftOf="@+id/imageView8"
                android:layout_toStartOf="@+id/imageView8"
                android:text="        COMBOS"
                />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageView8"

                android:layout_above="@+id/imageView6"
                android:layout_centerHorizontal="true" />
            <!--android:src="@drawable/dial_center"-->
        </RelativeLayout>

    </RelativeLayout>
    </RelativeLayout>

</LinearLayout>