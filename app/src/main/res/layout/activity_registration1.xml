<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.svc.sml.RegistrationActivity1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/inkarne_logo_register"
                    android:paddingTop="50dp"
                    android:paddingBottom="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/logo_full_105" />

                <EditText
                    android:id="@+id/etFirstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle"
                    android:ellipsize="start"
                    android:gravity="center_horizontal"
                    android:hint="First Name"
                    android:inputType="textNoSuggestions"
                    android:textColor="@color/tcolor" />


                <EditText
                    android:id="@+id/etLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle"
                    android:ellipsize="start"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:textColor="@color/tcolor"
                    android:hint="Last Name"
                    android:inputType="textNoSuggestions"
                    />

                <EditText
                    android:id="@+id/etMobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"
                    android:textColor="@color/tcolor"
                    android:maxLength="10"
                    android:background="@drawable/rectangle"
                    android:hint="Mobile Number"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/tcolor"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rectangle"
                    android:ellipsize="start"
                    android:gravity="center_horizontal"
                    android:hint="PIN"
                    android:inputType="number"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etAge"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:textColor="@color/tcolor"
                        android:maxLength="3"
                        android:background="@drawable/rectangle"
                        android:hint="Age"
                        android:inputType="number" />

                <TextView
                    android:id="@+id/tvGender"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"
                    android:maxLength="10"
                    android:background="@drawable/rectangle"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="15dp"
                    android:textSize="18sp"
                    android:text="Gender"
                    android:textStyle="bold"
                    android:textColor="#a9a9a9" />

                <Button
                    android:id="@+id/btnMale"
                    android:layout_width="4dp"
                    android:layout_height="32dp"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:text="M"
                    android:background="@drawable/rectangle"
                    android:textColor="@color/tcolor"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnFemale"
                    android:layout_width="4dp"
                    android:layout_height="32dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle"
                    android:text="F"
                    android:textColor="@color/tcolor"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                    </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Enter Body Measurments (in cm)"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etHeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/tcolor"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle"
                        android:ellipsize="start"
                        android:gravity="center_horizontal"
                        android:hint="Height"
                        android:inputType="number" />

                    <EditText
                        android:id="@+id/etBust"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/tcolor"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle"
                        android:ellipsize="start"
                        android:gravity="center_horizontal"
                        android:hint="Bust"
                        android:inputType="number" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etWaist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/tcolor"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle"
                        android:ellipsize="start"
                        android:gravity="center_horizontal"
                        android:hint="Waist"
                        android:inputType="number" />

                    <EditText
                        android:id="@+id/etHips"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:textColor="@color/tcolor"
                        android:background="@drawable/rectangle"
                        android:ellipsize="start"
                        android:gravity="center_horizontal"
                        android:hint="Hips"
                        android:inputType="number" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etWeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/tcolor"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle"
                        android:ellipsize="start"
                        android:gravity="center_horizontal"
                        android:hint="Weight"
                        android:inputType="number" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:text="Proceed"
                    android:textSize="18sp"
                    android:background="@color/tcolor"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />
            </LinearLayout>
    </LinearLayout>
   </LinearLayout>